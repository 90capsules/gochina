              <div class="col s3">
                <form action="#">
                  <p>
                    <input type="checkbox" id="<%= key %>_<%= i %>_val" name="<%= key %>" value="<%= value[1][i-1] %> : no" />
                    <label for="<%= key %>_<%= i %>_val"><%= value[1][i-1] %></label>
                  </p>
                </form>
              </div>
            <% end %>
