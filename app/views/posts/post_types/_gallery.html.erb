<div class = "row">
  <div class="col s3">
       <!-- user info-->
          <div class="card-panel red lighten-2">
            <div class="caption center-align">
              <img src="<%current_user.profile_img%>" alt="" class="circle responsive-img" style = "height: 150px;
                      width: 150px;" > 
            </div>
            <span class="white-text"  style ="text-align: center">
              <h5><%=current_user.realname%></h5>
              <h6>年龄 : <%=current_user.age%> </h6>
              <h6>性別 : <%=current_user.sex%></h6>
            </span>
          </div>
            <!-- user info end-->
            <!-- user part test보류-->
            <div class="card-panel white" style = "padding-top: 0px;    padding-right: 0px;    padding-bottom: 0px;    padding-left: 0px;">
                <div class = "row" style = "margin: 0.5rem 0 1rem 0;">
                    <% @tags.each do |key, value|%>
                      <button name="<%=key%>" class= "col s4 form-box" type="button" id= <%=key%> style= "padding-right: 0px; padding-left: 0px;">
                      <img src="/assets/part_picture/<%= key %>.png" alt="" style = "height: 50px; width: 50px;" ></br>
                      <%= value[0][0] %>
                      </button> 
                    <% end %>
                </div>
            </div>
            </div>


<div class="col s9">
  <div class ="board">  
    <h2 class="header">
      <%= bulletin_name params[:bulletin_id] %>
    </h2>
    <h2><small><%= link_to '설정', edit_bulletin_path(params[:bulletin_id])%></small></h2>


<div class='gallery'>
<div class='row'>
  <% @posts.each do | post | %>
      <div class='col l4 m4 s6  picture'>
        <div class='image'><%= link_to(image_tag(post.picture_url(:thumb)), [post.bulletin, post]) if post.picture? %></div>
        <div class='title'><%= post.title %></div>
        <div class='content'><%= post.content %></div>
        <% if post.tag_list.size > 0 %>
          <div class='tag_list'><%= fa_icon('tags') + " " + tag_icons(post.tag_list) %></div>
        <% end %>
        <div class='actions'>
            <%= link_to fa_icon('eye'), [post.bulletin, post] %>
            <%= link_to fa_icon('edit'), edit_bulletin_post_path(post.bulletin, post) %>
            <%= link_to fa_icon('trash'), [post.bulletin, post], method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
  <% end %>
</div>
</div>
    

<br>

<%= link_to 'New Post', new_bulletin_post_path, class: 'btn btn-default' %>
</div></div></div>